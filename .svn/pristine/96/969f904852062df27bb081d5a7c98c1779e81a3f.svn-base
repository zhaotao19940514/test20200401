		data.cardBalance = cardBalance;
		data.accountCardBalance = accountCardBalance;
	$.Taiji.showLoading($.Taiji.Messages.MSG_OPERATE);
	$.ajax({
	      url : rootUrl+"app/customerservice/finance/cardrefundconfirm/byLittleRefund",
	      type : "POST",
	      dataType : "json",
