	public void validate() {
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("yyyy-MM-dd");
		LocalDate nowDate = LocalDate.now();
		MyViolationException mve = new MyViolationException();
		if(cardId == null&&null==vehiclePlate&&null==vehicleColor) mve.addViolation("cardId", "请填写卡号");
		if(cardId!= null&&null!=vehiclePlate&&null==vehicleColor) mve.addViolation("vehicleColor", "请选择车牌颜色");
		if(cardId== null&&null!=vehiclePlate&&null==vehicleColor) mve.addViolation("vehicleColor", "请选择车牌颜色");
		if(cardId!= null&&null==vehiclePlate&&null!=vehicleColor) mve.addViolation("vehiclePlate", "请填写车牌号");
		if(cardId == null&&null==vehiclePlate&&null!=vehicleColor) mve.addViolation("vehiclePlate", "请填写车牌号");
		if (mve.hasViolation()) throw mve;
	}
	@Override
	public HqlBuilder toSelectHql() {
		HqlBuilder hql = new HqlBuilder("from " + "CardCancelRefund " +
				"  where 1=1 ");
		hql.append("and cardId=:cardId", cardId);
		hql.append("and vehicleId=:vehicleId", vehiclePlate+"_"+vehicleColor);
		if(null!=beforeDate) {
			hql.append(" and to_date(substr(cancelTime,1,10),'yyyy-MM-dd')");
			hql.append(" between to_date(:beforeDate,'yyyy-MM-dd') ",beforeDate);
			hql.append(" and to_date(:afterDate,'yyyy-MM-dd') ",afterDate);
		}
		return hql;
	}
